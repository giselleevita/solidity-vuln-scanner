# Environment variables for Smart Contract Security Scanner
# Copy this file to .env and fill in your values

# LLM Configuration
# Set USE_LLM=false to disable AI features completely (free, static analysis only)
USE_LLM=false

# Options: "openai" or "anthropic"
LLM_PROVIDER=openai

# Your API key (get from https://platform.openai.com/api-keys for OpenAI)
# Leave empty if USE_LLM=false
LLM_API_KEY=sk-your-api-key-here

# Model to use
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-opus, claude-3-sonnet, claude-3-haiku
LLM_MODEL=gpt-4o-mini

# LLM temperature (0-1, lower = more deterministic)
LLM_TEMPERATURE=0.3

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Analysis Settings
MAX_REPORT_LENGTH=5000
TIMEOUT_SECONDS=30
MAX_FILE_SIZE_MB=1

# Database (optional, for future features)
# DATABASE_URL=sqlite:///./app.db
